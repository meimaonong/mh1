<!--pages/work_edit/work_edit.wxml-->

<block class='new' wx:if="{{!work}}">
<view class='add_new' bindtap='newPic'>
<view>+</view>
<text>添加图片</text>
</view>
</block>

<view class="container" wx:if="{{work}}">

<view class="e_w">

<view class='head' data-txt="{{ work.work_title }}" bindtap='editTit'>
<image mode='aspectFill' src='{{ work.cover_img }}'></image>
<view class='tit'>{{ work.work_title ? work.work_title : '点击修改标题' }}</view>
<view class='cbtn' data-cover="{{ work.cover_img }}" catchtap='changecover'>测试按钮</view>
</view>


<view wx:for="{{work.workItems}}" wx:key="item.work_item_img" class='op_box_w'>
<view class='op_box'>
<image mode='aspectFill' data-index="{{ index }}" src='{{ item.work_item_img }}' data-img='{{ item.work_item_img }}' bindtap='changeimg'></image>
<view class='txt' bindtap='editTxt' data-index="{{ index }}" data-txt="{{ item.txt }}">{{ item.txt }}</view>
<view class='op'>
<view class="top" bindtap='m_up' data-index="{{ index }}" wx:if="{{ index!==0 }}">
<view class="top-arrow1"></view>
<view class="top-arrow2"></view>
</view>
<view class="bottom" bindtap='m_down' data-index="{{ index }}" wx:if="{{ index<work.workItems.length-1 }}">
<view class="bottom-arrow1"></view>
<view class="bottom-arrow2"></view>
</view>
</view>
</view>

<view class='add_w'>
<view class='add_btn' hidden='{{s_index==index ? true : false}}' data-index="{{ index }}" bindtap='addOp'>+</view>
<view class='type_w' hidden='{{s_index==index ?  false : true }}'>
<view class='type1' data-index="{{ index }}" catchtap='addTxt'>文字</view>
<view class='type2' data-index="{{ index }}" catchtap='addPic'>图片</view>
</view>
</view>

<view class='close_w' data-index="{{ index }}" catchtap='delItem'><icon type="clear" size="15" color='rgb(255,255,255)'/></view>

</view>


</view>

<view class="p3">
<picker bindchange="bindPickerChange" value="{{index}}" range="{{prang}}" range-key="category_name">
<view class="mc">
<text>所属测试</text>
<text class="choose">{{result.category.category_name}}</text>
<image src="http://svn.meimaonong.com/arrow.png"/>
</view>
</picker>
<picker bindchange="bindPickerChange2" value="{{index}}" range="{{prang2}}" range-key="album_title">
<view class="mc">
<text>所属测试</text>
<text class="choose">{{result.album.album_title}}</text>
<image src="http://svn.meimaonong.com/arrow.png"/>
</view>
</picker>
</view>

<view class='op_bto'>
<view class="back"> 测试2 </view>
<view class="save"> 测试1 </view>
</view>

</view>

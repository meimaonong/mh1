/* pages/work_edit/work_edit.wxss */
.container{
  padding-bottom: 50rpx;
}

.hide{
  display: none;
}

.e_w{
  border-top: 1rpx solid #eee;
  background: #fff;
  margin-bottom: 30rpx;
}

.head{
  width: 100%;
  height: 300rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.head image{
  vertical-align: top;
  width: 100%;
  height: 300rpx;
}
.tit{
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 35rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.cbtn{
  position: absolute;
  right: 20rpx;
  top:20rpx;
  font-size: 28rpx;
  padding:10rpx 15rpx;
  background: #eee;
  border: 1rpx solid #ccc;
}

.op_box_w{
  position: relative;
}
.op_box{
  display: flex;
  position: relative;
  border-radius: 10rpx;
  flex-direction: row;
  margin: 0 20rpx;
  background: #fff;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  padding:35rpx 0 35rpx 35rpx;
}

.close_w{
  position: absolute;
  left: 22rpx;
  top: 3rpx;
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  background: #aaa;
}
.close_w icon{
  width: 35rpx;
  height: 35rpx;
  vertical-align: top;
}
.op_box image{
  width: 150rpx;
  height: 150rpx;
}
.txt{
  flex: 1;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}
.op{
  width: 50rpx;
  position: relative;
}

/*上箭头*/
.top{
    width:50rpx;
    height:50rpx;
    position:absolute;
    left:0;
    top:-5rpx;
    z-index: 2;
}
.top-arrow1,.top-arrow2{
    width:0;
    height:0;
    display:block;
    position:absolute;
    left:10rpx;
    top:0;
    z-index: 5;
    border-top:12rpx transparent solid;
    border-left:12rpx transparent solid;
    border-right:12rpx transparent solid;
    border-bottom:12rpx white solid;
    overflow:hidden;
}
.top-arrow1{
    border-bottom:12rpx #ccc solid;
}
.top-arrow2{
    top:3rpx;
    border-bottom:12rpx white solid;
}

.bottom{
    width:50rpx;
    height:50rpx;
    position:absolute;
    left:0;
    bottom:-30rpx;
    z-index: 2;
}
.bottom-arrow1,.bottom-arrow2{
    width:0;
    height:0;
    display:block;
    position:absolute;
    left:10rpx;
    top:0;
    z-index: 5;
    border-bottom:12rpx transparent solid;
    border-left:12rpx transparent solid;
    border-right:12rpx transparent solid;
    border-top:12rpx white solid;
    overflow:hidden;
}
.bottom-arrow1{
    top:3rpx;
    border-top:12rpx #ccc solid;
}
.bottom-arrow2{
    border-top:12rpx white solid;
}

.add_w{
  text-align: center;
  padding:20rpx;
}
.add_btn{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 auto;
  line-height: 100%;
  text-align: center;
  background: #ccc;
  color: #fff;
}
.type_w{
  display: flex;
  width: 200rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 5rpx;
  border: 1rpx solid #ccc;
}
.type_w.hide{display: none}
.type1, .type2{
  flex: 1;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #333;
  text-align: center;
  border-right: 1rpx solid #ccc;
  margin-left: -1rpx;
}
.type2{
  border-right: none;
}

.p3{
  background: #fff;
  margin-top: 30rpx;
  padding: 0 30rpx;
}
.p3 .mc{
  display: block;
  position: relative;
  height: 100rpx;
  font-size: 30rpx;
  color: #999;
  border-bottom: 1rpx solid #efefef;
  line-height: 100rpx;
}
.choose{
  margin-left: 50rpx;
  color: #353535;
}
.p3 picker:last-child .mc{
  border-bottom: none;
}
.p3 image{
  width:15rpx;
  height: 25rpx;
  position: absolute;
  top: 37rpx;
  right: 0;
}

.op_bto {
  position: fixed;
  border-top: 1rpx solid #eee;
  left: 0;
  bottom: 0;
  width: 100%;
  overflow: hidden;
}
.save, .back{
  float: left;
  width: 50%;
  line-height: 100rpx;
  text-align: center;
}
.save {
  background-color: #333;
  color: #fff;
}
.back {
  background-color: #fff;
  color: #333;
}

.add_new{
  background: #fff;
  position: relative;
  width: 350rpx;
  height: 350rpx;
  text-align: center;
  box-sizing: border-box;
  margin: 200rpx auto 0;
  border: 1rpx dotted #ccc;
}
.add_new view{
  color: #ccc;
  height: 100%;
  line-height: 100%;
  font-size: 250rpx;
}
.add_new text{
  line-height: 50rpx;
  font-size: 35rpx;
  position: absolute;
  display: block;
  width: 100%;
  left: 0;
  top: 250rpx;
  color: #999;
}




.x-share-bg{
  position: fixed;
  z-index: 101;
  background: rgba(0, 0, 0, 0.5);
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.x-share-cp{
  position: fixed;
  background: #fff;
  width: 100%;
  height: 300rpx;
  left: 0;
  bottom: 0;
}
.x-share-zone{
  height: 200rpx;
  display: flex;
}
.x-share-item{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  text-align: center;
}
.x-share-item-img{
  width: 35%;
  flex: 6;
  display: block;
}
.x-share-item-txt{
  flex: 3;
  font-size: 30rpx;
  color: #999;
}
.x-share-cancel{
  box-sizing: border-box;
  border-top: 1px solid #efefef;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  color: #333;
  font-size: 35rpx;
}

.x-share-btn{
  display: flex;
  z-index: 100;
  align-items: center;
  text-align: center;
  position: fixed;
  right: 40rpx;
  bottom: 130rpx;
  width: 90rpx;
  height: 90rpx;
  background: #00a2ff;
  border-radius: 50%;
}
.x-share-btn-img{
  width: 50%;
  height: 50%;
  margin: 0 auto;
}
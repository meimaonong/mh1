/* pages/my/my.wxss */
.p1{
  position: relative;
  width: 100%;
  height: 290rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 60rpx 0 0 40rpx;
}
.bg{
  position: absolute;
  z-index: 5;
  left: 0;
  top: 0;
  width: 100%;
  height: 290rpx;
}
.h{
  position: relative;
  z-index: 6;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  float:left;
}
.n,.bind{
  position: relative;
  z-index: 6;
  text-align: left;
  color: #fff;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 210rpx;
  padding-top: 35rpx;
}
.bind{
  padding-top: 0;
  line-height: 50rpx;
}
.bind navigator{display: inline;color: #ffcf0d;font-size: 30rpx;}


.navigator-hover {
    background:none;
    opacity: 0.9;
}
.p2{
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 1rpx;
}

.p2 view{
  position: absolute;
  left:55%;
  top:35rpx;
  background: #f00;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
}


.p2 navigator{
  flex: 1;
  height: 170rpx;
  text-align: center;
  position: relative;
}
.p2 image{
  width: 52rpx;
  height: 45rpx;
  display: block;
  margin: 50rpx auto 0;
}
.p2 text{
  color: #666;
  line-height: 75rpx;
  font-size: 28rpx;
}

.n2{
  border-left: 1rpx solid #f0eff5;
  border-right: 1rpx solid #f0eff5;
}

.p3{
  background: #fff;
  margin-top: 30rpx;
  padding: 0 30rpx;
}
.p3 navigator{
  display: block;
  position: relative;
  height: 100rpx;
  font-size: 30rpx;
  color: #353535;
  border-bottom: 1rpx solid #f0eff5;
  line-height: 100rpx;
}
.p3 navigator:last-child{
  border-bottom: none;
}
.p3 image{
  width:15rpx;
  height: 25rpx;
  position: absolute;
  top: 37rpx;
  right: 0;
}
/* pages/adress/adress.wxss */
.container{
  padding-bottom: 100rpx;
}
.b_h{
  height: 94rpx;
  line-height: 94rpx;
  background: #fff;
  padding: 0 50rpx;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  overflow: hidden;
}
.e{
  color: #1086dd;
  float: right;
  font-size: 30rpx;
}

.b{
  background: #fff;
  margin-bottom: 30rpx;
  padding: 50rpx;
}
.b_t{
  color: #333;
  font-size: 32rpx;
  padding-bottom: 8rpx;
}
.b_p, .b_a{
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  color: #999;
  font-size: 30rpx;
  padding:16rpx 0 0;
}
.b_p_i{
  width: 28rpx;
  height: 35rpx;
  position: relative;
  top: 6rpx;
}
.b_p_d{
  flex: 1;
  padding-left: 20rpx;
}
.i_op{
  display: flex;
  width: 100%;
  box-sizing: border-box;
  height: 70rpx;
  margin-top: 30rpx;
  text-align: center;
}
.del,.edit{
  flex: 1;
  line-height: 68rpx;
  box-sizing: border-box;
  border: 1rpx solid #333;
  font-size: 30rpx;
}
.del{background: #fff;}
.edit{background: #333;color: #fff;}

.add_address{
  background: #333;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 10;
}
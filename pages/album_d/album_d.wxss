/* pages/album_d/album_d.wxss */
page{
  background: #fff;
  padding-top: 110rpx;
}
.head{
  display: flex;
  position: fixed;
  background: #fff;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  padding: 30rpx;
}
.e{
  color: #1086dd;
  padding-top: 10rpx;
  font-size: 30rpx;
}
.t{
  flex: 1;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.w{
  overflow: hidden;
  padding: 30rpx 0 60rpx 20rpx;
}
.w navigator{
  float: left;
  position: relative;
  width:345rpx;
  overflow: hidden;
  margin: 0 20rpx 20rpx 0;
}
.txt{
  display: block;
  width: 100%;
  font-size: 30rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 65rpx;
  line-height: 65rpx;
  background: rgba(0, 0, 0, 0.5);
  
}
.txt text{
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.w navigator image{
  vertical-align: top;
  width: 345rpx;
  height: 345rpx;
}

.op{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 70rpx;
  text-align: center;
}
.del,.edit{
  flex: 1;
  line-height: 68rpx;
  box-sizing: border-box;
  border: 1rpx solid #333;
  font-size: 30rpx;
}
.del{background: #fff;}
.edit{background: #333;color: #fff;}